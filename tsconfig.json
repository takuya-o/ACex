{
  "compilerOptions": {
      "module": "amd",
      "lib": [
        "dom",
        "es5",
        "scripthost",
        "es2015.promise"
      ],
      "noImplicitAny": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "./src",
      "allowJs": true,
      "target": "es5"
  },
  "exclude": [
    "node_modules/",
    "src/lib/"
  ],
  "include": ["./src/**/*"]
}
