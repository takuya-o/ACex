{
  "manifest_version": 2,
  "name": "AirCampus for Web Extender",
  "short_name": "ACex",
  "description": "Extend AirCampus for Web",
  "author": "Takuya Ono",
  "version": "0.0.0.3",

  "permissions": [
    "tabs", 
    "https://www.bbt757.com/svlAC/" 
  ],
  "content_scripts": [ {
    "matches": ["https://www.bbt757.com/ac/web/*"],
    "js": ["tagmanager.js", "prototype.js", "script.js"],
    "run_at": "document_end"
  } ],
  "page_action": {
    "default_icon": "icon_19.png",
    "default_title": "AirCumpus for Web Extender",
    "default_popup": "popup.html"
  },
  "content_security_policy":
          "script-src 'self' 'unsafe-eval' https://www.googletagmanager.com; object-src 'self'",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "19": "icon_19.png",
    "16": "icon_16.png"
  },
  "background": {
    "page": "background.html"
  },
  "default_locale": "en"
}
